<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/alfa"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtVieUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="Usuario"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/Usuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVieUsuario"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:ems="15"
                android:hint="Usuario"
                android:inputType="text" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/ContrasenaTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Usuario"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Contraseña"
                android:textSize="50sp" />

            <EditText
                android:id="@+id/ContrasenaPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ContrasenaTv"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:ems="15"
                android:hint="Contraseña"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/BotonRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ContrasenaPrincipal"
                android:layout_marginTop="161dp"
                android:layout_toLeftOf="@+id/txtVieUsuario"
                android:text="Registrarse"
                android:textSize="30dp" />

            <Button
                android:id="@+id/BotonEntrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/BotonRegistro"
                android:layout_alignBottom="@+id/BotonRegistro"
                android:layout_toRightOf="@+id/txtVieUsuario"
                android:text="Entrar"
                android:textSize="30dp" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>